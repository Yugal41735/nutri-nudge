{
  "manifest_version": 3,
  "name": "Nutri-Nudge",
  "version": "1.0",
  "description": "Extracts product ingredients and nutrition information from Blinkit and processes images using Gemini API.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.blinkit.com/*",
    "https://*.google.com/*"
  ],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "icons/icon48.png",
    "default_width": 1000,
    "default_height": 800
  },
  "content_scripts": [
    {
      "matches": ["*://*.blinkit.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
